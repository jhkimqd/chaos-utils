framework:
  version: "v1"
  log_level: info
  log_format: text

kurtosis:
  default_enclave: "polygon-chain"

docker:
  sidecar_image: "jhkimqd/chaos-utils:latest"
  pull_policy: "if_not_present"

prometheus:
  url: "http://localhost:9090"
  timeout: 30s
  refresh_interval: 15s

reporting:
  output_dir: "./reports"
  keep_last_n: 50
  formats:
    - json
    - html

emergency:
  stop_file: "/tmp/chaos-emergency-stop"
  auto_cleanup_timeout: 5m

execution:
  default_mode: sequential
  default_warmup: 30s
  default_cooldown: 30s
  max_concurrent_faults: 5

safety:
  max_duration: 1h
  require_confirmation: true
